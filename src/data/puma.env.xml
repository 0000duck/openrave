<?xml version="1.0" encoding="utf-8"?>

<Environment>
  <bkgndcol>0.3 0.7 0.8</bkgndcol>

  <Robot file="../robots/puma.robot.xml">
    <name>MyPuma</name>
    <Translation>0 0 0</Translation>
    <Quat>1 0 0 0</Quat>
  </Robot>
  <!-- A simple plane for ground -->
  <KinBody name="Ground">
    <Body type="static">
      <Geom type="plane">
        <eqn>0 1 0 0</eqn>
      </Geom>
    </Body>
  </KinBody>
  <KinBody name="Table">
    <Body type="static">
      <Translation>-1 1 0</Translation>
      <Geom type="box">
      	<ambientColor>0 0.25 0</ambientColor>
        <diffuseColor>0.5 1 0.5</diffuseColor>
        <extents>0.75 0.025 1</extents>
      </Geom>
    </Body>
    <mass type="sphere">
      <total>10</total>
      <radius>1</radius>
    </mass>
  </KinBody>
  <KinBody file="lego4.kinbody.xml">
    <Translation>-0.55 1.2 0</Translation>
  </KinBody>
  <!--
  <KinBody file="lego2.kinbody.xml">
    <Translation>-0.8 1.4 0</Translation>
  </KinBody> -->
</Environment>
