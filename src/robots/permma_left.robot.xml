<Robot name="PerMMA-Left">
  <KinBody>
    <Body name="base" type="dynamic">
      <Translation>0 0 0</Translation>
      <Geom type="trimesh">
        <Render>models/permma/body_part.wrl 0.001</Render>
        <data>models/permma/body_part.wrl 0.001</data>
      </Geom>
      <Geom type="trimesh">
        <Translation>0.250825 0 0 </Translation>
        <RotationAxis>0 1 0 180</RotationAxis>
        <Render>models/permma/d_wheel.wrl 0.001</Render>
        <data>models/permma/d_wheel.wrl 0.001</data>
      </Geom>
      <Geom type="trimesh">
        <Translation>-0.250825 0 0 </Translation>
        <Render>models/permma/d_wheel.wrl 0.001</Render>
        <data>models/permma/d_wheel.wrl 0.001</data>
      </Geom>
    </Body>
  </KinBody>
  <Robot file="manusarm_left.robot.xml">
    <Translation>0.3175 0.301498 0.03556</Translation>
  </Robot>
  <KinBody>
    <!-- link the arms with the base -->
    <Joint name="lJ_liftarm" type="hinge">
      <Body>base</Body>
      <Body>l-lift-arm</Body>
      <offsetfrom>l-lift-arm</offsetfrom>
      <weight>1</weight>
      <lostop>0</lostop>
      <histop>179</histop>
      <axis>0 1 0</axis>
      <maxvel>0.5</maxvel>
      <resolution>1</resolution>
    </Joint>
  </KinBody>
</Robot>
