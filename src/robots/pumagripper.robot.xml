<?xml version="1.0" encoding="utf-8"?>

<Robot>
  <KinBody name="PumaGripper">
    <Body name="Puma6" type="dynamic">
      <Geom type="trimesh">
        <Data>models/puma/puma6.iv</Data>
        <Render>models/puma/puma6.iv</Render>
      </Geom>
      <Geom type="trimesh">
        <Translation>0 0.1 0</Translation>
	    <Data>models/puma/ClawBase.iv</Data>
        <Render>models/puma/ClawBase.iv</Render>
      </Geom>
      <mass type="sphere">
        <total>0.24</total>
        <radius>1</radius>
      </mass>
    </Body>

    <Body name="RClaw" type="dynamic">
	  <Translation>0 0.1 0</Translation>
	  <offsetfrom>Puma6</offsetfrom>
      <Geom type="trimesh">
        <Data>models/puma/RClaw.iv</Data>
        <Render>models/puma/RClaw.iv</Render>
      </Geom>
      <mass type="sphere">
        <total>0.1</total>
        <radius>1</radius>
      </mass>
    </Body>

    <Joint name="m1" type="hinge">
      <Body>Puma6</Body>
      <Body>RClaw</Body>
      <offsetfrom>RClaw</offsetfrom>
      <weight>0.2</weight>
      <lostop>-56</lostop>
      <histop>8</histop>
      <axis>0 0 -1</axis>
      <maxvel>0.8</maxvel>
      <resolution>3</resolution>
    </Joint>

    <Body name="LClaw" type="dynamic">
	  <Translation>0 0.1 0</Translation>
	  <offsetfrom>Puma6</offsetfrom>
      <Geom type="trimesh">
        <Data>models/puma/LClaw.iv</Data>
        <Render>models/puma/LClaw.iv</Render>
      </Geom>
      <mass type="sphere">
        <total>0.1</total>
        <radius>1</radius>
      </mass>
    </Body>

    <Joint name="m2" type="hinge" enable="false" mimic="m1 1 0">
      <Body>Puma6</Body>
      <Body>LClaw</Body>
      <offsetfrom>LClaw</offsetfrom>
      <weight>0.2</weight>
      <lostop>-56</lostop>
      <histop>8</histop>
      <axis>0 0 1</axis>
      <maxvel>0.8</maxvel>
      <resolution>3</resolution>
    </Joint>
  </KinBody>

  <Manipulator name="hand">
    <effector>Puma6</effector>
	<base>Puma6</base>
    <joints>m1</joints>
    <!-- joint values of the closed and opened positions -->
    <closingdirection>1</closingdirection>
    <palmdirection>0 1 0</palmdirection>
    <!-- grasp goal with respect to the effector -->
    <Translation>0 0.175 0</Translation>
  </Manipulator>
</Robot>
